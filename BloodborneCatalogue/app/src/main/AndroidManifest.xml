<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.cjameswebdev.bloodbornecatalogue"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".npc_list"
            android:label="@string/title_activity_npc_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".enemies_list"
            android:label="@string/title_activity_enemies_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".boss_list"
            android:label="@string/title_activity_boss_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".npc_article"
            android:label="@string/title_activity_npc__article_"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".BossArticle">
        </activity>
        <activity android:name=".EnemyArticle">
        </activity>
        <activity android:name=".References">
        </activity>
    </application>

</manifest>